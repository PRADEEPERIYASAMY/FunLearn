<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DivisionActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#148606"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/woodmenu">

            <TextView
                android:id="@+id/label"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:text="Division      "
                android:textAlignment="center"
                android:textSize="45dp"
                android:fontFamily="@font/paint"
                android:textColor="#CE4A1900" />

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/back"
                android:id="@+id/back"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/wallfour">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView39"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#9180B1FF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/glasscentre"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="187dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/glassone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="187dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/glasstwo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="187dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/glassfour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="187dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/glassthree"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/result_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Result"
                    android:textSize="35dp"
                    android:layout_margin="4dp"
                    android:textAlignment="center"
                    android:textColor="#4FA6FB"
                    android:fontFamily="@font/gecko"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/holder"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:id="@+id/container">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_one"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_two"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_three"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_four"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_five"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_six"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_seven"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_eight"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="220dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_nine"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginRight="13dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_write_ten"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="280dp"
                        android:layout_marginRight="13dp" />
                </RelativeLayout>
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:src="@drawable/boom"
                    android:id="@+id/addition_wrong"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView38"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="27dp"
            app:cardBackgroundColor="#9180B1FF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView39"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView41"
            app:layout_constraintVertical_bias="0.5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/glass"
                android:scaleType="fitXY"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView43"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rectangle"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/equal" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/c3"
                    app:layout_constraintStart_toEndOf="@+id/cardView43"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mathboard"
                        android:scaleType="fitXY"/>
                    <EditText
                        android:id="@+id/addition_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:textColorHighlight="@android:color/transparent"
                        android:textColorHint="@android:color/transparent"
                        android:textColorLink="@android:color/transparent"
                        android:textAlignment="center"
                        android:textSize="57dp"
                        android:textColor="#101911"
                        android:fontFamily="@font/digital"
                        android:layout_margin="5dp"
                        android:paddingBottom="10dp"
                        android:maxLength="3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="#6DC0B3"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#F9333333"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/rectangle"
                            android:scaleType="fitXY"/>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:background="@drawable/submit" />

                        <Button
                            android:id="@+id/retry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:background="@drawable/retry"
                            tools:visibility="invisible" />

                        <Button
                            android:id="@+id/next"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:background="@drawable/next"
                            tools:visibility="invisible" />

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="34dp"
            app:cardBackgroundColor="#9180B1FF"
            app:cardCornerRadius="45dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView39"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/roundglass"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="45dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rectangle"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/divide"
                    android:layout_margin="10dp"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView41"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            app:cardBackgroundColor="#9180B1FF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView39"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/glass"
                android:scaleType="fitXY"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mathboard"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/addition_first_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textAlignment="center"
                    android:textSize="57dp"
                    android:paddingTop="5dp"
                    android:textColor="#101911"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/digital"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            app:cardBackgroundColor="#9180B1FF"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView39"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/glass"
                android:scaleType="fitXY"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mathboard"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/addition_second_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textAlignment="center"
                    android:textSize="57dp"
                    android:paddingTop="5dp"
                    android:textColor="#101911"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/digital"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>